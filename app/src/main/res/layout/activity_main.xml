<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.navin.alarmfull.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alarm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarm Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/update_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0:00 AM"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/alarm_how"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+30 mins Traffic"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:text="Location" />

        <Button
            android:id="@+id/btn_transport"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:text="Transportation" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="onClick"
            android:text="Time" />

        <Button
            android:id="@+id/alarm_on"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="turn_on"
            android:text="Set alarm" />

        <Button
            android:id="@+id/alarm_off"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="turn_off"
            android:text="Turn off" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

    </LinearLayout>

</ScrollView>
